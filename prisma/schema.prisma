// Prisma schema for auth flows

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TokenType {
  RESET_PASSWORD
  VERIFY_EMAIL
  ACCESS
  REFRESH
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  passwordHash   String
  name           String?
  role           UserRole  @default(USER)
  status         UserStatus @default(ACTIVE)
  image          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  tokens         Token[]
}

model Token {
  id         String    @id @default(uuid())
  type       TokenType
  token      String    @unique
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  consumedAt DateTime?

  @@index([userId, type])
  @@index([token, type])
}
